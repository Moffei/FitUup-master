<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dsuappacademy.fituup.CampusFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".CampusFragment">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/kids"
            android:layout_marginBottom="332dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView5"
            android:background="#FF3349"
            android:paddingLeft="50dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/housing"
            android:paddingLeft="50dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:id="@+id/imageView8" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/wellness"
            android:layout_alignTop="@+id/imageView5"
            android:layout_alignLeft="@+id/imageView5"
            android:layout_alignStart="@+id/imageView5"
            android:layout_marginTop="350dp"
            android:background="#FF3349"
            android:id="@+id/imageView6"
            android:paddingLeft="50dp"
            android:paddingTop="1dp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Student Activities"
            android:id="@+id/button6"
            android:background="@null"
            android:textColor="#33A5FF"
            android:onClick="website"
            android:textSize="18sp"
            android:layout_marginBottom="75dp"
            android:layout_alignBottom="@+id/imageView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Residence"
            android:id="@+id/button7"
            android:background="@null"
            android:textColor="#33A5FF"
            android:onClick="housing"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Recreation"
            android:id="@+id/button8"
            android:background="@null"
            android:textColor="#33A5FF"
            android:onClick="rec"
            android:textSize="18sp"
            android:layout_marginBottom="58dp"
            android:layout_alignBottom="@+id/imageView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>


</FrameLayout>