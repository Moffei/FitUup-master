<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation= "vertical">


    <ScrollView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context=".AdmissionsFragment">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/flags"
                android:id="@+id/imageView9" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="800dp"
                android:src="@drawable/admin"
                android:layout_marginBottom="320dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/imageView"
                android:background="#FF3349"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Admissions"
                android:id="@+id/textView"
                android:textSize="18sp"
                android:background="#FF3349"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Undergraduate:
            We recommend that you follow a college preparatory curriculum in high school.
Admission may be granted to applicants who have:
A certificate or diploma from an accredited four-year school or senior high school."
                android:id="@+id/textView2"
                android:background="#33A5FF"
                android:layout_below="@+id/imageView9"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ffffff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="      A minimum GPA of 2.0 or better on a 4.0 scale.
Test scores of 800 on the SAT (math and critical reading combined), test scores of 800 or above (after concordance) on the 2016 redesigned SAT (math and critical reading combined), or a 17 or better composite score on the ACT."
                android:textColor="#ffffff"
                android:id="@+id/textview10"
                android:background="#33A5FF"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="      Please note, as of March 2016, the College Board has launched a redesigned SAT. For more information about the redesign—please visit the College Board website.   Completed the required 19 minimum course units with a ‘C’ or better:"
                android:textColor="#ffffff"
                android:id="@+id/textview11"
                android:layout_alignBottom="@+id/button2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="39dp"
                android:background="#33A5FF"
                android:textSize="15sp"
                android:layout_below="@+id/textview10" />

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Apply Now!"
                android:id="@+id/button2"
                android:layout_marginTop="85dp"
                android:onClick="visitwebsite"
                android:layout_below="@+id/textview10"
                android:layout_centerHorizontal="true" />
            />

        </RelativeLayout>
    </ScrollView>
</FrameLayout>
